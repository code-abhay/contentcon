{
  "title": "Blog Post",
  "uid": "blog_post",
  "schema": [
    {
      "data_type": "text",
      "display_name": "Title",
      "uid": "title",
      "field_metadata": {
        "_default": true,
        "placeholder": "Blog post title",
        "version": 3
      },
      "mandatory": true,
      "multiple": false,
      "non_localizable": false,
      "unique": true
    },
    {
      "data_type": "text",
      "display_name": "Description",
      "uid": "description",
      "field_metadata": {
        "description": "Short description/excerpt",
        "multiline": true,
        "placeholder": "Blog post description",
        "version": 3
      },
      "mandatory": true,
      "multiple": false,
      "non_localizable": false,
      "unique": false
    },
    {
      "data_type": "file",
      "display_name": "Featured Image",
      "uid": "featured_image",
      "field_metadata": {
        "description": "Featured image for the blog post",
        "rich_text_type": "standard",
        "image": true
      },
      "mandatory": false,
      "multiple": false,
      "non_localizable": false,
      "unique": false,
      "dimension": {
        "width": { "min": null, "max": null },
        "height": { "min": null, "max": null }
      }
    },
    {
      "data_type": "text",
      "display_name": "Category",
      "uid": "category",
      "field_metadata": {
        "description": "Category badge (e.g., 'E-book', 'Report', 'Article')",
        "placeholder": "Category",
        "version": 3
      },
      "mandatory": false,
      "multiple": false,
      "non_localizable": false,
      "unique": false
    },
    {
      "data_type": "json",
      "display_name": "Content",
      "uid": "content",
      "field_metadata": {
        "allow_json_rte": true,
        "embed_entry": false,
        "description": "Full blog post content",
        "default_value": "",
        "multiline": false,
        "rich_text_type": "advanced",
        "options": []
      },
      "format": "",
      "error_messages": { "format": "" },
      "reference_to": ["sys_assets"],
      "mandatory": false,
      "multiple": false,
      "non_localizable": false,
      "unique": false
    },
    {
      "data_type": "text",
      "display_name": "Slug",
      "uid": "slug",
      "field_metadata": {
        "description": "URL-friendly slug for the post",
        "placeholder": "blog-post-slug",
        "version": 3
      },
      "mandatory": true,
      "multiple": false,
      "non_localizable": false,
      "unique": true
    },
    {
      "data_type": "isodate",
      "display_name": "Publish Date",
      "uid": "publish_date",
      "field_metadata": {
        "description": "Publication date"
      },
      "mandatory": true,
      "multiple": false,
      "non_localizable": false,
      "unique": false
    },
    {
      "data_type": "text",
      "display_name": "Author",
      "uid": "author",
      "field_metadata": {
        "description": "Author name",
        "placeholder": "Author Name",
        "version": 3
      },
      "mandatory": false,
      "multiple": false,
      "non_localizable": false,
      "unique": false
    }
  ],
  "description": "Blog posts/articles for the blog section",
  "options": {
    "singleton": false,
    "title": "title",
    "publishable": true,
    "sub_title": [],
    "url_pattern": "/:slug",
    "url_prefix": "/blog/"
  },
  "abilities": {
    "get_one_object": true,
    "get_all_objects": true,
    "create_object": true,
    "update_object": true,
    "delete_object": true,
    "delete_all_objects": true
  },
  "maintain_revisions": true
}
